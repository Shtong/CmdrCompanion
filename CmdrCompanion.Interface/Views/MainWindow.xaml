<Window x:Class="CmdrCompanion.Interface.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:CmdrCompanion.Interface.Views"
        Title="Commander Companion" Height="600" Width="800"
        DataContext="{Binding Main, Source={StaticResource Locator}}" Style="{DynamicResource mainWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl TabStripPlacement="Left" Margin="10, 10, 10, 20">
            <TabItem Header="Data Sheets">
                <v:DataSheetsHome />
            </TabItem>
            <TabItem Header="Plugins">
                <v:Plugins />
            </TabItem>
            <TabItem Header="Travel Designer">
                <v:TravelDesigner />
            </TabItem>
            <TabItem Header="Jump finder">
                <v:JumpFinder />
            </TabItem>
        </TabControl>
        <Button Grid.Row="1" HorizontalAlignment="Left" Margin="10" Command="{Binding CloseCommand}">
            Close
        </Button>
    </Grid>
</Window>
