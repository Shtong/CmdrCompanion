<Window x:Class="CmdrCompanion.Interface.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:CmdrCompanion.Interface.Views"
        Title="Commander Companion" Height="600" Width="800"
        DataContext="{Binding Main, Source={StaticResource Locator}}" Style="{DynamicResource mainWindow}" ResizeMode="CanResizeWithGrip" MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl TabStripPlacement="Left" Margin="10, 10, 10, 20" x:Name="mainTabs">
            <TabItem Header="TRAVEL DESIGNER">
                <v:TravelDesigner />
            </TabItem>
            <TabItem Header="JUMP INFO">
                <v:JumpFinder />
            </TabItem>
            <TabItem Header="DATA SHEETS">
                <v:DataSheetsHome />
            </TabItem>
            <TabItem Header="PLUGINS">
                <v:Plugins />
            </TabItem>
        </TabControl>
        <Button Grid.Row="1" HorizontalAlignment="Left" Margin="10" Command="{Binding CloseCommand}">
            CLOSE
        </Button>
    </Grid>
</Window>
